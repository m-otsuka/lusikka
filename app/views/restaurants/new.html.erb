<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(new_restaurant_path, method: :get, class: 'form-inline') do %>
        <div class="form-group">
          <%= text_field_tag :keyword, @keyword, class: 'form-control input-lg', size: 40 %>
        </div>
        <%= submit_tag 'Search', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'restaurants', restaurants: @restaurants %>
