<% if current_user.want_to_go?(restaurant) %>
  <%= form_tag(visit_path(restaurant.id), method: :delete) do %>
    <%= hidden_field_tag :restaurant_id, restaurant.id %>
    <%= hidden_field_tag :type, 'WantToGo' %>
    <%= submit_tag 'Want to go', class: 'btn btn-unwant_to_go' %>
  <% end %>
<% else %>
  <%= form_tag(visits_path) do %>
    <%= hidden_field_tag :code, restaurant.code %>
    <%= hidden_field_tag :type, 'WantToGo' %>
    <%= submit_tag 'Want to go', class: 'btn' %>
  <% end %>
<% end %>